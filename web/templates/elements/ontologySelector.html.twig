{% block content %}


    <!-- Form container for selecting an ontology -->
    <div class="container d-flex flex-column justify-content-center gap-3 p-0" id="ontology-selector-container">

        <!-- User Ontologies -->
        <div class="container d-flex flex-column justify-content-center gap-1">
            <h3>Your Ontologies</h3>
            <!-- Annotated Resources List Container -->
            <div class="container d-flex flex-column justify-content-center gap-0 p-0" id="user-ontologies-container"></div>
            <!-- Loading Resourcs Spinner Container -->
            <div class="container w-100 d-flex flex-row justify-content-center gap-5 p-0" id="user-ontologies-spinner-container">
                <div class="spinner-border text-secondary" style="width: 5rem; height: 5rem;" role="status"></div>
            </div>
        </div>

        <!-- Grid to contain the inputs/buttons for selecting  -->
        <div class="container">
            <div class="row my-3">
                <div class="col">
                    <!-- Details about the use of the terms4FAIRskills GitHub ontology -->
                    <h3>Use terms4FAIRSkills Ontology</h3>
                    <p>Use the ontology from <a class="link-primary" href="https://github.com/terms4fairskills/FAIRterminology">terms4FAIRskills GitHub repository</a>.</p>
                </div>
                <div class="col">
                    <!-- Input to enter the URL of an OWL file-->
                    <h3>Ontology From URL</h3>
                    <label for="ontology-url-input" class="form-label">Load from URL</label>
                    <input class="form-control" type="text" name="ontology-url-input" id="ontology-url-input" />
                </div>
            </div>
            <div class="row my-3">
                <div class="col">
                    <!-- Button to select the terms4FAIRskills OWL file -->
                    <button type="button" class="btn btn-primary text-center w-100 px-5" id="github-load-submit" onclick="OntologySelector.loadFromGitHub()">Load ontology</button>
                </div>
                <div class="col">
                    <!-- Button to import the OWL file from the URL -->
                    <button type="button" class="btn btn-primary text-center w-100 px-5" id="url-load-submit" onclick="OntologySelector.loadFromURL()">Import ontology</button>
                </div>
            </div>
        </div>

        
        <p class="text-center text-danger" id="owl-selection-error"></p>
    </div>

{% endblock %}