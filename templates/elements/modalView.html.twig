{% block content %}

    <!-- Modal HTML -->
    <div id="modal-view" class="modal fade" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-title"></h5>
                </div>
                <div class="modal-body">
                    <div class="container w-100 d-flex flex-row justify-content-center gap-5 p-0" id="modal-loading-spinner-container">
                        <div class="spinner-border text-secondary" style="width: 5rem; height: 5rem;" role="status"></div>
                    </div>
                    <div class="container w-100 d-flex flex-row justify-content-center gap-5 p-0" id="modal-content-container">

                    </div>
                </div>
                <div class="modal-footer" id="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="ModalController.hide()">Close</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}