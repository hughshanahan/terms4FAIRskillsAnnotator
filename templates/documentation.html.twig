{% extends 'base.html.twig' %}

{% block title %}Documentation{% endblock %}

{% block header %}

    <script>

        // go to the documentation
        function goToDocs(url) {
            window.location.href = '/docs' + url;
        }

    </script>


{% endblock %}

{% block content %}

    <div class="container d-flex flex-column justify-content-center gap-3 p-0 m-0">

        <h2 class="text-center">terms4FAIRskills Annnotator Documentation</h2>

        <div class="container d-flex flex-row justify-content-center gap-3 p-0 m-0">

            <button type="button" class="btn btn-primary btn-lg btn-block" onclick="goToDocs('/backend/src/')">Backend (src)</button>
            <button type="button" class="btn btn-primary btn-lg btn-block" onclick="goToDocs('/backend/tests/')">Backend (tests)</button>
            <button type="button" class="btn btn-primary btn-lg btn-block" onclick="goToDocs('/frontend/')">Frontend</button>
            
        </div>

    </div>


{% endblock %}